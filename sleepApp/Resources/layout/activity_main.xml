<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:background="#7FDBFF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">

    <RelativeLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout1"
        >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/times1And2"
            android:layout_marginTop="10px">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time1"
            android:layout_marginRight="50px"
            android:textColor="#ffb6c1"
            android:textSize="35dp"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time2"
            android:textColor="#ffb6c1"
            android:textSize="35dp"/>

        </TableRow>

        <TableRow
            android:id="@+id/times3And4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/times1And2">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time3"
            android:layout_marginRight="50px"
            android:textColor="#ffb6c1"
            android:textSize="35dp"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time4"
            android:textColor="#ffb6c1"
            android:textSize="35dp"/>

        </TableRow>

        <TableRow
            android:id="@+id/times5And6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/times3And4">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time5"
            android:layout_marginRight="50px"
            android:textColor="#ffb6c1"
            android:textSize="35dp"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time6"
            android:textColor="#ffb6c1"
            android:textSize="35dp"/>

        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:textAlignment="center"
            android:text="I need to wake up at:"
            android:id="@+id/wakeUpTextView"
            android:layout_below="@id/times5And6"
            />

        <TableRow
            android:layout_below="@id/wakeUpTextView"
            android:layout_marginTop="25px"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/tableRow1">

            <Spinner
            android:layout_marginRight="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hourSpinner"
            android:entries="@array/hoursArray" />

            <Spinner
            android:layout_marginRight="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minutesSpinner"
            android:entries="@array/minutesArray" />

            <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amOrPmSpinner"
            android:entries="@array/amOrPmArray" />
        
        </TableRow>

        <Button
            android:layout_below="@id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toWakeUpCalBtn"
            android:text="Calculate"
            android:layout_marginTop="20px"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"/>
        
        <TableRow
            android:layout_below="@id/toWakeUpCalBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/times1And2GoToBedNow"
            android:layout_marginTop="10px">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time1GoToBedNow"
            android:layout_marginRight="50px"
            android:textColor="#ffb6c1"
            android:textSize="35dp"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time2GoToBedNow"
            android:textColor="#ffb6c1"
            android:textSize="35dp"/>

        </TableRow>

        <TableRow
            android:id="@+id/times3And4GoToBedNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/times1And2GoToBedNow">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time3GoToBedNow"
            android:layout_marginRight="50px"
            android:textColor="#ffb6c1"
            android:textSize="35dp"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time4GoToBedNow"
            android:textColor="#ffb6c1"
            android:textSize="35dp"/>

        </TableRow>

        <TableRow
            android:id="@+id/times5And6GoToBedNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/times3And4GoToBedNow">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time5GoToBedNow"
            android:layout_marginRight="50px"
            android:textColor="#ffb6c1"
            android:textSize="35dp"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time6GoToBedNow"
            android:textColor="#ffb6c1"
            android:textSize="35dp"/>

        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:textAlignment="center"
            android:text="If I go to bed now:"
            android:id="@+id/goToBedNowTextView"
            android:layout_below="@id/times5And6GoToBedNow"
            />
            
        <Button
            android:layout_below="@id/goToBedNowTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goToBedNowBtn"
            android:text="Calculate"
            android:layout_marginTop="20px"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"/>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
