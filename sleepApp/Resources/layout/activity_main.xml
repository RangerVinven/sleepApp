<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:background="#7FDBFF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">

    <RelativeLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout1"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:layout_marginTop="20px"
            android:textAlignment="center"
            android:layout_marginBottom="30px"
            android:id="@+id/times"
            android:textColor="#ffb6c1"
            />
            

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="220px"
            android:textAlignment="center"
            android:text="I need to wake up at:"
            android:id="@+id/wakeUpTextView"
            />

        <TableRow
            android:layout_below="@id/wakeUpTextView"
            android:layout_marginTop="25px"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            
            android:id="@+id/tableRow1">

            <Spinner
            android:layout_marginRight="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hourSpinner"
            android:entries="@array/hoursArray" />

            <Spinner
            android:layout_marginRight="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minutesSpinner"
            android:entries="@array/minutesArray" />

            <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amOrPmSpinner"
            android:entries="@array/amOrPmArray" />
        
        </TableRow>

        <Button
            android:layout_below="@id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toWakeUpCalBtn"
            android:text="Calculate"
            android:layout_marginTop="20px"
            android:layout_centerHorizontal="true"/>
                
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
